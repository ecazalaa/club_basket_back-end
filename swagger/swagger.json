                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "licence",
                                    "id_match",
                                    "tituRemp",
                                    "poste"
                                ],
                                "properties": {
                                    "licence": {
                                        "type": "string",
                                        "example": "VT123456"
                                    },
                                    "id_match": {
                                        "type": "integer",
                                        "example": 1
                                    },
                                    "tituRemp": {
                                        "description": "T pour titulaire, R pour remplaçant",
                                        "type": "string",
                                        "example": "T"
                                    },
                                    "poste": {
                                        "description": "Poste du joueur dans le match",
                                        "type": "string",
                                        "example": "Meneur"
                                    },
                                    "note": {
                                        "type": "integer",
                                        "example": 8,
                                        "nullable": true
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Participation créée avec succès"
                    },
                    "400": {
                        "description": "Données invalides ou incomplètes"
                    },
                    "500": {
                        "description": "Erreur serveur lors de la création"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            },
            "delete": {
                "tags": [
                    "Feuille de Match"
                ],
                "summary": "Supprimer une ou plusieurs participations",
                "parameters": [
                    {
                        "name": "id_match",
                        "in": "query",
                        "description": "ID du match",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    },
                    {
                        "name": "licence",
                        "in": "query",
                        "description": "Numéro de licence du joueur (optionnel, si non fourni, supprime toutes les participations du match)",
                        "required": false,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Participation(s) supprimée(s) avec succès"
                    },
                    "404": {
                        "description": "Participation(s) non trouvée(s)"
                    },
                    "400": {
                        "description": "Paramètres manquants"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/authapi.php": {
            "post": {
                "tags": [
                    "Authentification"
                ],
                "summary": "Authentification utilisateur",
                "description": "Permet d'obtenir un token JWT pour accéder aux autres endpoints",
                "requestBody": {
                    "description": "Identifiants de connexion",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/LoginCredentials"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
